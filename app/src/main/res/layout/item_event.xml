<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/thick_button_background">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/eventItemImage"
        android:background="@color/red"
        android:scaleType="centerCrop"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:src="@mipmap/go_back_icon"
        android:layout_width="80dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eventItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Сходить на рыбалку"
        android:textColor="@color/bone"
        android:fontFamily="@font/benzin_extrabold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/eventItemImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/eventItemDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/bone"
        android:text="15 Июля, 2024"
        app:layout_constraintEnd_toEndOf="@+id/eventItemTitle"
        app:layout_constraintStart_toStartOf="@+id/eventItemTitle"
        app:layout_constraintTop_toBottomOf="@+id/eventItemTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>